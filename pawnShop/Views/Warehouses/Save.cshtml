@model WarehousesModel

@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1>Save WareHouses</h1>

<br />
<div class="card">
    <div class="card-header">
        Save
    </div>
    <div class="card-body">
        <form class="row g-3" asp-action="Save"  asp-controller="Warehouses" method="post">
            <div class="col-md-6">
             
                <label for="inputname" class="form-label">Name</label>
                <input type="text" class="form-control" id="inputname" asp-for="Name">
            </div>
            <div class="col-md-6">
                
                <label for="inputLocation" class="form-label">Location</label>
                <input type="text" class="form-control" id="inputLocation" placeholder="15ad ad" asp-for="Location">
            </div>

            <div class="col-12">
             
                <label for="CreationDate" class="form-label">Creation Date </label>
                <input type="text" class="form-control" id="CreationDate">
            </div>

   
            <div class="col-12">
              
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </div>
        </form>
    </div>
</div>

<script>

    var currentDate = new Date().toLocaleDateString('en-US', { month: '2-digit', day: '2-digit', year: '2-digit' });

    document.getElementById('CreationDate').value = currentDate;

    document.getElementById('HiringDate').value = currentDate;
    $('#inlineFormCustomSelect').on('change', function () {
        var selectedRole = $(this).val();
        $('#Role').val(selectedRole);
    });


</script>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
